

        <android.support.percent.PercentRelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            tools:context=".ListPicklistActivity" >


            <ImageView
                android:id="@+id/list_picklist_status"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="8dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/list_picklist_num"
                app:layout_widthPercent="40%"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/list_picklist_status"
                android:layout_marginLeft="15dp"/>



            <TextView
                android:id="@+id/list_picklist_date"
                app:layout_widthPercent="40%"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:gravity="end"/>

            <TextView
                android:id="@+id/list_picklist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/list_picklist_status"
                android:layout_below="@id/list_picklist_num"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"/>


        </android.support.percent.PercentRelativeLayout>




